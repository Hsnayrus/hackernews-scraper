# --- Postgres ----------------------------------------------------------------
POSTGRES_USER="hn_user"
POSTGRES_PASSWORD="wowsosecure"
POSTGRES_DB="hackernews"
# Internal Docker hostname (service name). Use 'localhost' for local dev without Docker.
POSTGRES_HOST="postgres"
POSTGRES_PORT=5432

# --- Temporal ----------------------------------------------------------------
# Internal Docker hostname (service name). Use 'localhost' for local dev without Docker.
TEMPORAL_HOST="temporal"
TEMPORAL_PORT=7233
TEMPORAL_NAMESPACE="default"
# Task queue name must match the value registered by the worker.
TEMPORAL_TASK_QUEUE="hn-scraper-queue"
# Temporal Web UI configuration
TEMPORAL_UI_PORT=8080
TEMPORAL_CORS_ORIGINS="http://localhost:8080"

# --- API ---------------------------------------------------------------------
API_PORT=8000

# --- Observability -----------------------------------------------------------
LOG_LEVEL="INFO"

# --- Scraper -----------------------------------------------------------------
HN_BASE_URL="https://news.ycombinator.com"
SCRAPE_TOP_N=30

# Optional: Maximum characters to store for a story's top comment.
# Comments longer than this will be truncated. Defaults to 10000 (~1500 words).
# TOP_COMMENT_MAX_CHARS=10000

# Optional: Delay in milliseconds between scraping comments for different stories.
# Helps avoid HN rate limiting. Defaults to 100ms.
# COMMENT_SCRAPE_DELAY_MS=100
